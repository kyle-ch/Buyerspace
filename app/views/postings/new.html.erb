<div class="container">
  <h1>Create a new posting</h1>
  <%= form_tag postings_create_path(posting_id: params[:posting_id]), method: "get", html: {class: "form"} do |f| %>
  <div class="form-group row">
    <div class="col-sm-10">
      <label for="title" class="col-sm-2 col-form-label">Title:</label>
      <%= text_field_tag(:title, "", class: "form-control", autocomplete: "off") %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <label for="description" class="col-sm-2 col-form-label">Description:</label>
      <%= text_area_tag(:description, "", placeholder: "Describe what you are looking for.", class: "form-control", autocomplete: "off") %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <label for="asking_price" class="col-sm-8 col-form-label">Asking Price: (in USD)</label>
      <%= number_field_tag(:asking_price, "", class: "form-control", autocomplete: "off") %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <label for="tag" class="col-sm-2 col-form-label">Tag It?</label>
      <%= text_field_tag(:tag, "", class: "form-control", autocomplete: "off") %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
