<div class="container">
  <div class="row">
    <h1><%=@posting.title%></h1>
    <p>Viewing posting #<%=@posting.posting_id%></p>
  </div>
  <div class="row">
    Title:
    <%= @posting.title %><br/>
    Posting Date:
    <%= @posting.posting_date %><br/>
    Description:
    <%= @posting.description %><br/>
    Completed?
    <% if @posting.completion_status == 1 %>
      <%="Yes"%><br/>
    <% else %><%="No"%><br/>
    <% end %>
    Asking Price: $<%= @posting.asking_price %><br/>
    <br/>
  </div>
  <div class="row">
    <h2>Make an offer</h2>
    <%= form_tag seller_offer_path(), method: "get", html: {class: "form"} do |f| %>
    <%= hidden_field_tag "id", @posting.posting_id %>
    <div class="form-group row">
      <div class="col-sm-10">
        <label for="offer_price" class="col-sm-4 col-form-label">Offer Price: (in USD)</label>
        <%= number_field_tag(:offer_price, "", class: "form-control", autocomplete: "off") %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <label for="description" class="col-sm-4 col-form-label">Leave a message:
        </label>
        <%= text_area_tag(:description, "", class: "form-control", autocomplete: "off") %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= submit_tag "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
</div>