<div class="container">
  <% if params[:success] == "failed" %>
  <div class="alert alert-danger row" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
    <strong>Login Failed!</strong> Make sure you entered a valid email!
  </div>
  <% end %>
  <div class="row">
    <h1>Login</h1>
    <p>Enter your email to login or create an account</p>
  </div>
  <div class="row">
    <%= form_tag login_login_path, method: "get", html: {class: "form"} do %>
    <div class="form-group col-sm-6">
      <label for="email" class="col-form-label">Buyer Email:</label>
      <%= text_field_tag(:email, "", class: "form-control", autocomplete: "off") %>
      <div class="form-group row">
        <div class="col-sm-10">
          <%= submit_tag "Login Buyer", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  <%= form_tag login_sellerlogin_path, method: "get", html: {class: "form"} do %>
  <div class="form-group col-sm-6">
    <label for="email" class="col-form-label">Seller Email:</label>
    <%= text_field_tag(:email, "", class: "form-control", autocomplete: "off") %>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= submit_tag "Login Seller", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>
