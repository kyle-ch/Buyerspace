<div class="container">
  <h1>Create a new buyer account</h1>
  <p>Enter your information to create a new account</p>
  <%= form_tag login_create_path, method: "get", html: {class: "form"} do |f| %>
  <div class="form-group row">
    <div class="col-sm-4">
      <label for="email" class="col-sm-2 col-form-label">Email:</label>
      <p id="email"><%= session[:email] %></p>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-8">
      <label for="fname" class="col-sm-2 col-form-label">First Name:</label>
      <%= text_field_tag(:fname, "", class: "form-control", autocomplete: "off") %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-8">
      <label for="lname" class="col-sm-2 col-form-label">Last Name:</label>
      <%= text_field_tag(:lname, "", class: "form-control", autocomplete: "off") %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-8">
      <label for="phone" class="col-sm-6 col-form-label">Phone Number:</label>
      <%= telephone_field_tag(:phone, "", class: "form-control", autocomplete: "off") %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-8">
      <label for="zipcode" class="col-sm-2 col-form-label">Zip Code:</label>
      <%= number_field_tag(:zipcode, "", class: "form-control", autocomplete: "off") %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-8">
      <label for="city" class="col-sm-2 col-form-label">City:</label>
      <%= text_field_tag(:city, "", class: "form-control", autocomplete: "off") %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-8">
      <label for="state" class="col-sm-2 col-form-label">State:</label>
      <%= text_field_tag(:state, "", class: "form-control", autocomplete: "off", maxlength: 2) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-8">
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
</div>